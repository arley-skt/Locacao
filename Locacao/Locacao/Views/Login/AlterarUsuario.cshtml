
@{
    ViewData["Title"] = "AlterarUsuario";
    Layout = "~/Views/Shared/LayoutLogado.cshtml";
}


@model List<Usuario>
<h1>Lista Usuario</h1>


@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                @*<th scope="col">Id</th>*@
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Administrador</th>
            </tr>
        </thead>
        <tbody>
           @{ 
               var t = 0;
           }
            @foreach (var i in Model)
            {
                t++;
            <tr>
                <td>
                    @t
                </td>
                <td>
                    @i.Nome
                </td>
                <td>
                    @i.Email
                </td>
                @if (i.Administrador)
                {
                    <td>
                        <a id="Adm" asp-controller="Login" asp-action="Desabilitado" asp-route-id="@i.Id"
                           class="btn btn-success">Dasabilitar Adm</a>
                    </td>
                }
                else
                {
                    <td>
                        <a id="Adm" asp-controller="Login" asp-action="TornarAdm" asp-route-id="@i.Id"
                           class="btn btn-success">Aprovar Adm</a>
                    </td>
                }


            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum Usuario Encontrado</p>
}

@section Scripts{
    <script type="text/javascript">

        //$('#Header').hide();


    </script>
}
