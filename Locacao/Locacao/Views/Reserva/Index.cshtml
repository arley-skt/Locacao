
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutLogado.cshtml";
}
@model List<Reserva>
<h1>Lista Reservas</h1>


@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Data Reserva</th>
                <th scope="col">Usuario</th>
                <th scope="col">Veiculo</th>
            </tr>
        </thead>
        <tbody>
            @{
                var t = 0;
            }
            @foreach (var i in Model)
                
            {
                t++;
                <tr>
                    <td>@t</td>
                    <td>@i.DataReserva</td>
                    <td>
                        @i.usuario.Nome
                                        <input type="button" class="btn btn-default btn-block btn-primary btAtualizar" 
                                               asp-controller="Reserva" asp-action="GeraPedido"
       asp-route-id="@i.Id" value="Confirmar Pedido" id="@i.usuario.Id" /> @*onclick="Click(this)"*@
                                    </td>
                    <td>@i.Veiculo.Marca</td>
                    <td><div class="text-center">
    <a asp-controller="Reserva" asp-action="GeraPedido"
       asp-route-id="@i.Id"
       class="btn btn-success">Reservar</a>
</div></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhuma Reserva Encontrada</p>
}

@section Scripts{
    <script type="text/javascript">

        //$('#Header').hide();


    </script>
}



